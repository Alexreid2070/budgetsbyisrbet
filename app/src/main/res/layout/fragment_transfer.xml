<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferFragment"
    android:paddingTop="?android:attr/actionBarSize">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:id="@+id/linearlayoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/inputDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/inputDateLabel"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="Enter date"
                android:inputType="date"
                android:longClickable="false"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayoutAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayoutDate"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/inputAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/inputAmountLabel"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/entire_input_amount_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myborder"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="$  "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:hint="Enter amount"
                    android:inputType="numberDecimal" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/inputPaidByLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayoutAmount"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:text="Paid by:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/paidByRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputPaidByLabel"
            android:background="@drawable/myborder"
            android:checkedButton="@+id/radio_person3"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp"></RadioGroup>

        <TextView
            android:id="@+id/inputBoughtForLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paidByRadioGroup"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:text="Bought for:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/boughtForRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputBoughtForLabel"
            android:background="@drawable/myborder"
            android:checkedButton="@+id/radio_person3"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp"></RadioGroup>

        <LinearLayout
            android:id="@+id/transfer_note_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boughtForRadioGroup"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/inputNoteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="@string/inputNoteLabel"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/myborder"
                android:ems="10"
                android:gravity="left"
                android:hint="Enter note"
                app:endIconMode="clear_text"
                android:inputType="text"
                android:padding="5dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/transfer_note_layout"
            android:gravity="center">

            <Button
                android:id="@+id/button_save_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>