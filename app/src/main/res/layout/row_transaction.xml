<?xml version="1.0" encoding="utf-8"?>
<LinearLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true">

    <TextView
        android:id="@+id/vtf_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vtf_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </TextView>

        <TextView
            android:id="@+id/vtf_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:textAlignment="textEnd"
            android:paddingStart="0dp"
            android:paddingEnd="4dp">
        </TextView>

        <TextView
            android:id="@+id/vtf_percentage1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:textAlignment="textEnd"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">
        </TextView>

        <TextView
            android:id="@+id/vtf_percentage2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:textAlignment="textEnd"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">
        </TextView>

        <TextView
            android:id="@+id/vtf_category_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </TextView>

        <TextView
            android:id="@+id/vtf_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:singleLine="true">
        </TextView>

        <TextView
            android:id="@+id/vtf_who"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/vtf_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:singleLine="true">
        </TextView>

        <TextView
            android:id="@+id/vtf_disc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textAlignment="textEnd"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
        </TextView>
        <TextView
            android:id="@+id/vtf_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textAlignment="textEnd"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
        </TextView>
        <TextView
            android:id="@+id/vtf_running_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:textAlignment="textEnd"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
        </TextView>

    </LinearLayout>
</LinearLayout>