<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment"
    android:paddingTop="?android:attr/actionBarSize">

    <LinearLayout
        android:id="@+id/button_budget_linear_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_budget_year_backward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-Yr"
            android:textSize="10dp">
        </Button>

        <Button
            android:id="@+id/button_budget_4month_backward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-4Mo"
            android:textSize="10dp">
        </Button>

        <Button
            android:id="@+id/button_budget_month_backward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-Mo"
            android:textSize="10dp">
        </Button>

        <Button
            android:id="@+id/button_budget_today"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="10dp">
        </Button>

        <Button
            android:id="@+id/button_budget_month_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mo+"
            android:textSize="10dp">
        </Button>

        <Button
            android:id="@+id/button_budget_4month_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4Mo+"
            android:textSize="10dp">
        </Button>

        <Button
            android:id="@+id/button_budget_year_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yr+"
            android:textSize="10dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BudgetLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/button_budget_linear_layout"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/m1Heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="M1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m2Heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m3Heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m4Heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M4"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/budget_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/BudgetLinearLayout">
    <ListView
        android:id="@+id/budget_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/BudgetLinearLayout">
    </ListView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>