<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:paddingTop="?android:attr/actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="% for Joint"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Default"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User:"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <EditText
                    android:id="@+id/settings_first_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/robin_egg_blue"
                    android:hint="Name"></EditText>

                <EditText
                    android:id="@+id/settings_first_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/robin_egg_blue"
                    android:hint="%"
                    android:inputType="numberDecimal"></EditText>

                <CheckBox
                    android:id="@+id/settings_first_user_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/robin_egg_blue"
                    android:onClick="onUserDefaultCheckboxClicked">
                </CheckBox>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp">
            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Second User:"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <EditText
                    android:id="@+id/settings_second_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/robin_egg_blue"
                    android:hint="Name  "></EditText>

                <EditText
                    android:id="@+id/settings_second_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/robin_egg_blue"
                    android:hint="%"
                    android:inputType="numberDecimal"></EditText>
                <CheckBox
                    android:id="@+id/settings_second_user_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/robin_egg_blue"
                    android:onClick="onUserDefaultCheckboxClicked">
                </CheckBox>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_joint_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Joint User:"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <EditText
                    android:id="@+id/settings_joint_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Joint"
                    android:enabled="false"></EditText>

                <EditText
                    android:id="@+id/settings_joint_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="100"
                    android:enabled="false"></EditText>

                <CheckBox
                    android:id="@+id/settings_joint_user_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/robin_egg_blue"
                    android:onClick="onUserDefaultCheckboxClicked">
                </CheckBox>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default category for new expenditures:  "
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <Spinner
                android:id="@+id/settings_default_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/robin_egg_blue" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Integrate with TD Spend?  "
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/settings_integrate_with_TD_Spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/robin_egg_blue"
                android:hint="Yes / No"
                android:inputType="text"></EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If your expenses are less than budget available to date, you are green.  ">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If your expenses are over budget available to date but are within the below percentage, you are yellow.  ">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If your expenses are more than the percentage below over the budget available to date, you are red.  ">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter the % that makes you red:  "
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <EditText
                    android:id="@+id/settings_red_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/robin_egg_blue"
                    android:hint="Enter red %"
                    android:inputType="number"></EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/settings_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Save">
                </Button>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:paddingBottom="10dp"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/settings_edit_categories_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Category List">
            </Button>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>