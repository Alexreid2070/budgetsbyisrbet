<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RetirementDetailsFragment">

    <LinearLayout
        android:id="@+id/page_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/pageHeadingBackgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="@string/retirement_details"
            android:textStyle="bold"
            android:textColor="?attr/pageHeadingFontColor"
            android:textSize="@dimen/pageHeadingFontSize"/>
        <TextView
            android:id="@+id/currentViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text=""
            android:textStyle="bold"
            android:textColor="?attr/pageHeadingFontColor"
            android:textSize="14sp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_title_layout"
        android:layout_above="@id/settings_button_linear_layout"
        android:fadeScrollbars="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/retirement_table_rows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*" />

            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_margin="15dp"
                android:elevation="4dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:stateListAnimator="@animator/anim"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="?attr/background"
                android:src="@drawable/ic_baseline_save_24"
                android:tooltipText="Save details"
                android:contentDescription="@string/save" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/settings_button_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/menuColor"
        android:layout_above="@id/expansion_layout"
        android:padding="5dp">
        <ImageView
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:scaleType="fitEnd"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:contentDescription="@string/settings"
            android:src="@drawable/ic_baseline_settings_24_orange"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/expansion_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/viewRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/menuColor"
            android:checkedButton="@+id/allRadioButton"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="gone"
            tools:ignore="UselessParent">

            <RadioButton
                android:id="@+id/show_all_columns_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_all_columns" />

            <RadioButton
                android:id="@+id/show_summary_columns_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_summary_columns" />

            <RadioButton
                android:id="@+id/show_tax_columns_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_tax_columns" />

            <RadioButton
                android:id="@+id/show_income_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_income_details" />

            <RadioButton
                android:id="@+id/show_pension_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_pension_details" />

            <RadioButton
                android:id="@+id/show_rrsp_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_rrsp_details" />

            <RadioButton
                android:id="@+id/show_lira_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_lira_details" />

            <RadioButton
                android:id="@+id/show_tfsa_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_tfsa_details" />

            <RadioButton
                android:id="@+id/show_savings_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_savings_details" />

            <RadioButton
                android:id="@+id/show_property_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_property_details" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>