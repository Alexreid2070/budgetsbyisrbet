<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/budget_dialog_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:textSize="18sp"
            android:layout_gravity="start"
            tools:ignore="HardcodedText" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/budget_dialog_subcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subcategory"
            android:textSize="18sp"
            android:layout_gravity="start"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/budget_dialog_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/categoryLayout">

        <TextView
            android:id="@+id/budget_dialog_year_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Year: "
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/budget_dialog_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/budget_dialog_linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_linear_layout1">

        <TextView
            android:id="@+id/budget_dialog_month_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Month: "
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/budget_dialog_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/budget_dialog_who_heading"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Budget For: "
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_linear_layout2"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/budget_dialog_new_who_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_who_heading"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp"/>

    <TextView
        android:id="@+id/budget_dialog_OccurenceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_new_who_RadioGroup"
        android:layout_gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="10dp"
        android:text="Frequency: "
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/budget_dialog_occurenceRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_OccurenceLabel"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp"/>

    <LinearLayout
        android:id="@+id/budget_dialog_linear_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_occurenceRadioGroup">

        <TextView
            android:id="@+id/budget_dialog_amount_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="New Amount: "
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amountLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/custom_med_width"
            android:hint="Amount"
            app:endIconMode="clear_text"
            tools:ignore="HardcodedText">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/budget_dialog_new_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="start"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:longClickable="false"
                android:enabled="false"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_linear_layout4">

        <Button
            android:id="@+id/budget_dialog_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="?android:attr/buttonBarButtonStyle"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/budget_dialog_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/buttonBarButtonStyle"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>