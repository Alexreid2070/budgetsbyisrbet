<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/budget_dialog_category"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="category"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/budget_dialog_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_category">

        <TextView
            android:id="@+id/budget_dialog_year_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Year: "
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/budget_dialog_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/budget_dialog_linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_linear_layout1">

        <TextView
            android:id="@+id/budget_dialog_month_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Month: "
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/budget_dialog_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/budget_dialog_who_heading"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Budget For: "
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_linear_layout2"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16dp"/>

    <RadioGroup
        android:id="@+id/budget_dialog_new_who_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_who_heading"
        android:background="@drawable/myborder"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp"></RadioGroup>

    <LinearLayout
        android:id="@+id/budget_dialog_linear_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_new_who_RadioGroup">

        <TextView
            android:id="@+id/budget_dialog_amount_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="New Amount: "
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/budget_dialog_new_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/budget_dialog_linear_layout4">

        <Button
            android:id="@+id/budget_dialog_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/budget_dialog_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>