<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/translation_before_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/beforeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/before"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textOnBackground" />
        <TextView
            android:id="@+id/before_field"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/custom_max_width"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/translation_after_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/translation_before_layout"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/afterLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/after"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textOnBackground" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/beforeLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/custom_max_width"
            android:hint="@string/note"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/after_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="start"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/translation_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/translation_after_layout"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/category"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textOnBackground" />
        <TextView
            android:id="@+id/category_field"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/custom_max_width"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/translation_category_layout"
        android:paddingBottom="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:contentDescription="@string/cancel"
            android:tooltipText="@string/cancel"
            android:elevation="4dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:background="?attr/background"
            android:src="@drawable/ic_baseline_cancel_24"
            android:stateListAnimator="@animator/anim"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:contentDescription="@string/save"
            android:tooltipText="@string/save"
            android:elevation="4dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:background="?attr/background"
            android:src="@drawable/ic_baseline_save_24"
            android:stateListAnimator="@animator/anim"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:contentDescription="@string/delete"
            android:tooltipText="@string/delete"
            android:elevation="4dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:background="?attr/background"
            android:src="@drawable/ic_baseline_delete_24"
            android:stateListAnimator="@animator/anim"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>