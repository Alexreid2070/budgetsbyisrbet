<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetirementDefaultsFragment">

    <LinearLayout
        android:id="@+id/page_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/pageHeadingBackgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/retirement_defaults"
            android:textStyle="bold"
            android:textColor="?attr/pageHeadingFontColor"
            android:textSize="@dimen/pageHeadingFontSize"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/who_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/page_title_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/who"
            android:textColor="@color/orange_salmon"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:fadeScrollbars="false"
            android:scrollbarThumbHorizontal="?attr/colorSecondary">

            <RadioGroup
                android:id="@+id/whoRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/name1RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/name2RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/who_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/rf"
                layout="@layout/retirement_fields"/>

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageButton
                    android:id="@+id/button_cancel"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/cancel"
                    android:elevation="4dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:background="?attr/background"
                    android:src="@drawable/ic_baseline_cancel_24"
                    android:stateListAnimator="@animator/anim"
                    android:tooltipText="Go back to calculations"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/button_update_defaults"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/update_defaults"
                    android:elevation="4dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:background="?attr/background"
                    android:src="@drawable/ic_baseline_save_24"
                    android:stateListAnimator="@animator/anim"
                    android:tooltipText="Save changes"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>