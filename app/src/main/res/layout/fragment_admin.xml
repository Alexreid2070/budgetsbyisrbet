<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragment"
    android:paddingTop="?android:attr/actionBarSize">

    <LinearLayout
        android:id="@+id/admin_user1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User 1: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/admin_user1_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alexreid2070@gmail.com"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/admin_user1_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="8AA5lJ0pOpfN3jQlBhmmk1PGBiI2"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/admin_user2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/admin_user1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User 2: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/admin_user2_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rheannonreid93@gmail.com"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/admin_user2_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="3yvcaxXaASQLQu9pc6EQWp6h57q2"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/admin_user3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/admin_user2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User 3: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/admin_user3_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alexreidandbrentjohnston@gmail.com"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/admin_user3_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="AgcnEPqB4zbDJUHME3Z29gejcyu1"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/admin_user4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/admin_user3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User 4: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/admin_user4_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/admin_user4_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_load_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Users"
        app:layout_constraintTop_toBottomOf="@+id/admin_user4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Space
        android:id="@+id/space1"
        app:layout_constraintTop_toBottomOf="@+id/button_load_users"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/space1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current User: " />
        <TextView
            android:id="@+id/admin_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CurrentUser" />
    </LinearLayout>

    <Button
        android:id="@+id/button_reinit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do stuff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>