<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetsByISRBET" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pastel_orange</item>
        <item name="colorSecondary">@color/orange_salmon</item>
        <item name="colorPrimaryVariant">@color/orange_salmon</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="textOnBackground">@color/white</item>
        <item name="menuColor">@color/darker_gray</item>
        <item name="textOnMenuColor">@color/white</item>
        <!-- used for dashboard rows -->
        <item name="colorOnPrimary">@color/darkest_gray</item>
        <item name="colorOnSecondary">@color/darker_gray</item>
        <item name="colorSecondaryVariant">@color/orange_salmon</item>
        <item name="android:editTextBackground">@color/pastel_orange</item>
        <item name="colorOnSurface">@color/sedona</item>
        <item name="buttonBackgroundColor">@color/black</item>

        <item name="pageHeadingFontColor">@color/black</item>
        <item name="pageHeadingBackgroundColor">@color/orange_salmon</item>
    </style>
</resources>