<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetsByISRBET" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sedona</item>
        <item name="colorSecondary">@color/pastel_orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorSecondaryVariant">@color/sedona_opac</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="textOnBackground">@color/black</item>
        <item name="menuColor">@color/sedona_opac</item>
        <!-- used for dashboard rows -->
        <item name="colorOnPrimary">@color/lightestgray</item>
        <item name="colorOnSecondary">@color/lighter_gray</item>
        <item name="android:editTextBackground">@color/sedona</item>
        <item name="colorOnSurface">@color/sedona</item>

        <item name="pageHeadingFontColor">@color/sedona</item>
        <item name="pageHeadingBackgroundColor">@color/pastel_orange</item>

    </style>

    <style name="Theme.BudgetsByISRBET.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BudgetsByISRBET.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BudgetsByISRBET.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>